

<!DOCTYPE html>
<html lang="en">
  <head>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "aRPmory" %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag "application", :media => "all" %>

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag 'favicon.ico', :rel => 'shortcut icon' %>

    <%= javascript_include_tag "application" %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js" type="text/javascript"></script>
    <![endif]-->
  </head>
  <body>

  <nav class="navbar navbar-dark navbar-expand-lg bg-dark sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/"><span class="wow-text">aRPmory</span></a>
    <div class="float-end" id="navbarNav">
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item">
            <a class="nav-link bliz-text" href='/'><%= current_user.battletag %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link bliz-text" data-method="delete" href=<%= destroy_user_session_path %>>Logout</a>
          </li>
        <% else %>
          <li class="nav-item">
            <a class="nav-link bliz-text" href=<%= user_bnet_omniauth_authorize_path %>>Login with Blizzard</a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>







<div class="container-fluid">
    <div class="row flex-nowrap">
      <% if current_user %>
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
              <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                  <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                      <span class="fs-5 d-none d-sm-inline">Menu</span>
                  </a>
                  <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                      <li class="nav-item">
                          <a href=<%= user_character_index_path(current_user.no_hash_battletag) %> class="nav-link align-middle px-0">
                              <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline bliz-text">My Characters</span>
                          </a>
                      </li>
                      <li class="nav-item">
                        <a href=<%= character_select_path(current_user.no_hash_battletag) %> class="nav-link align-middle px-0">
                            <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline bliz-text">Add Characters</span>
                        </a>
                      </li>
                  </ul>
              </div>
              <div class='center-image-2'>
                <%= image_tag("aRPmory_logo_large.png") %>
              </div>
            </div>
          <% end %>
        <div class="col py-3">
          <%= bootstrap_flash %>
          <%= yield %>
        </div>
    </div>
</div>

      <footer>
        <p> &copy; Burning Bridges 2022 </p>
      </footer>

  </body>
</html>
