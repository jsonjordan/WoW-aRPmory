<body>

  <h2>
    Current Characters for <%= @user.battletag %>: <span> </span> <span class="badge bg-secondary"><%= @user_characters.count %></span>
  </h2>

  <table class="table table-hover table-striped table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Level</th>
        <th>Class</th>
        <th>Realm</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @user_characters.each do |c| %>
        </tr>
            <th><%= c.name %></th>
            <th><%= c.level %></th>
            <th><%= c.klass %></th>
            <th><%= c.realm.name %></th>
            <th class="button-container">
                <%= button_to('Go To Character Page', character_show_path(@user.no_hash_battletag, c.uid), class: 'btn btn-xs btn-info', method: :get) %>
            </th>
            <th>
                <img src="<%= c.inset_image_url %>" onerror="this.src='/inset_image_unavailable.png'""/>
            </th>
        </tr>
      <% end %>
    </tbody>
  </table>


  <h3>
    Want to add another character?
  </h3>
  <%= button_to('Add New Character', character_select_path(@user.no_hash_battletag), class: 'btn btn-m btn-warning', method: :get) %>

</body>